<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Tomcat Manager Application</display-name>	
  
  <servlet>
  	<servlet-name>HelloWorld</servlet-name>
  	<servlet-class>com.apache.servlet.HelloWorldServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.apache.servlet.Loginservlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ValidateServlet</servlet-name>
    <servlet-class>com.apache.servlet.ValidateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CounterSerclet</servlet-name>
    <servlet-class>com.apache.servlet.CounterSerclet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>com.apache.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CookieServlet</servlet-name>
    <servlet-class>com.Web.cookie.CookieServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AjaxServlet</servlet-name>
    <servlet-class>com.Ajax.AjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>JqueryServlet</servlet-name>
    <servlet-class>com.JqueryAjax.JqueryServlet</servlet-class>
  </servlet>


  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.Filter.LoginFilter</filter-class>
  </filter>



  
  <servlet-mapping>
  	<servlet-name>HelloWorld</servlet-name>
  	<url-pattern>/HelloWorld</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ValidateServlet</servlet-name>
    <url-pattern>/ValidateServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CounterSerclet</servlet-name>
    <url-pattern>/CounterSerclet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CookieServlet</servlet-name>
    <url-pattern>/CookieServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjaxServlet</servlet-name>
    <url-pattern>/AjaxServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JqueryServlet</servlet-name>
    <url-pattern>/JqueryServlet</url-pattern>
  </servlet-mapping>
   <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
